<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <%- include('../js/indexScript'); %>
</head>

<body>

    <div id="page-container">
        <div id="content-wrap">
            <header>
                <%- include('../partials/header'); %>
            </header>

            <!--Diseño de caja de posteo de notas-->

            <div class="creacion-nota" id="creacion-nota" hidden="true">
                <h4>Nueva nota:</h4>
                <div class="caja-comentario">
                    <label for="cuerpoDeNota">Título de Nota:</label>
                    <input type="text" class="form-control" id="tituloDeNota"
                        placeholder="Ingresa el título de la nota.">
                    <div id="tituloHelp" class="form-text invalid-feedback"></div>

                    <div class="form-group">
                        <label for="cuerpoDeNota">Cuerpo de Nota:</label>
                        <textarea class="form-control" id="cuerpoDeNota" rows="2"></textarea>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary btn-sm" id="submitNota">Publicar Nota</button>
                </div>
            </div>

            <div class="container">
                <% rows.forEach(function(row){ %>
                    <div class="caja-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title">
                                    <h2>
                                        <%= row.titulo %>
                                    </h2>
                                </div>
                                <div class="card-text">
                                    <img class="img" src="/public/img/noticias.jpg" alt="">
                                    <a class="leer-mas" href="/api/v1/nota/<%= row.idnota %>" id=<%=row.idnota %>>Leer
                                        más</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>

            <br>
        </div>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>
    </div>

</body>

</html>